---
import Layout from "../layouts/default.astro";
import { Image } from "astro:assets";
import heroImg from "../images/hero-image2.png";
---

<Layout>
	<section class="block hero">
		<div class="cta">
			<h1>Bring Your Pokémon Dreams to Life!</h1>
			<p class="lede">
				Experience the magic of adopting your very own Pokémon.
			</p>
			<a href="/shop" class="big-link">Shop now</a>
		</div>
		<Image src={heroImg} alt="a cute pikachu" class="hero-image" />
	</section>
</Layout>

<style>
	.hero {
		aspect-ratio: 2 / 3;
		display: flex;
		overflow: hidden;
		padding: 1rem 5% 40%;
		position: relative;
	}

	.hero :not(.hero-image) {
		position: relative;
		z-index: 10;
	}

	.cta {
		max-width: 400px;
	}

	.hero h1 {
		font-size: clamp(1.75rem, 10vw, 2.5rem);
		margin: 0;
	}

	.lede {
		font-size: clamp(1rem, 5.75vw, 1.5rem);
		line-height: 1.25;
		margin: 0.5rem 0 0;
	}

	.hero-image {
		position: absolute;
		inset: 0;
		object-fit: cover;
		object-position: 28% 0%;
		height: 135%;
		width: 135%;
		z-index: 1;
	}

	@media (min-width: 450px) {
		.hero {
			aspect-ratio: 4 / 5;
		}

		.hero-image {
			height: 120%;
			object-position: 35% 50%;
			width: 120%;
		}
	}

	@media (min-width: 600px) {
		.hero {
			align-items: center;
			aspect-ratio: 3 / 2;
			justify-content: flex-end;
			padding: 2rem 5%;
		}

		.hero-image {
			height: 110%;
			object-fit: cover;
			object-position: 65% 50%;
			width: 100%;
		}
	}

	@media (min-width: 900px) {
		.hero {
			aspect-ratio: 2.5 / 1;
		}

		.hero-image {
			height: 100%;
			object-position: 50% 50%;
		}
	}

	@media (min-width: 1150px) {
		.hero {
			justify-content: flex-start;
			padding-left: 60%;
		}
	}
</style>
